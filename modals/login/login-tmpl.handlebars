<div class="modal-close"></div>

<div class="row">
  <h1>Log In</h1>
</div>

<div class="row">
  <button class="facebook-login-button span2 offset1" type="button">Connect with Facebook</button>
</div>

<div class="row">
  <span class="span4 or-divider">or</span>
</div>

<div class="row">
  <form class="login-form span2 offset1">
    <div class="control-group">
      <label for="field-email" class="control-label">
        Email
      </label>
      <div class="controls">
        <input type="email" class="field-email" id="field-email">
      </div>

      <label for="field-password" class="control-label">
        Password
      </label>
      <div class="controls">
        <input type="password" class="field-password" id="field-password">
      </div>
    </div>
    <div class="control-group">
      <label for="remember" class="checkbox-label">
        Remember Me
      </label>
      <div class="controls">
        <input type="checkbox" id="remember" class="checkbox remember-checkbox">
        <a href="#">Forgot Password</a>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="login-button span2">Log In</button>
      </div>
    </div>
  </form>
</div>
