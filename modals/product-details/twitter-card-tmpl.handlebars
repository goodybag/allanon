<meta class="twitter-card" name="twitter:card" content="product">
<meta class="twitter-card" name="twitter:site" content="@GoodybagATX">
<meta class="twitter-card" name="twitter:title" content="{{name}}">
<meta class="twitter-card" name="twitter:description" content="{{desc}}">
<meta class="twitter-card" name="twitter:image" content="{{filepicker imageUrl imgWidth imgHeight}}">
<meta class="twitter-card" name="twitter:image:width" content="{{imgWidth}}">
<meta class="twitter-card" name="twitter:image:height" content="{{imgHeight}}">
