{{! Modal Close }}
<div class="modal-close"></div>

<div class="modal-content">
  <h1 class="modal-title">{{business.name}}</h1>

  <iframe width="100%" height="400" class="locations-map expanded" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q={{uri business.name}},+Austin,+TX&amp;aq=0&amp;oq={{uri business.name}}&amp;ie=UTF8&amp;hq={{uri business.name}},&amp;hnear=Austin,+Travis,+Texas&amp;t=m&amp;spn=0.224672,0.117598&amp;output=embed"></iframe>

  <div class="locations-list page-wrapper columns inline-columns">
    {{#each business.locations}}
    <address class="column column-3">
      <strong>{{../business.name}}{{#if this.name}} - {{this.name}}{{/if}}</strong><br />
      {{this.street1}}, {{#if this.street2}}{{this.street2}}, {{/if}}<br />
      {{this.city}}, {{this.state}} {{this.zip}}</br />
      {{#if this.phone}}<em class="phone">{{phone this.phone}}</em>{{/if}}
    </address>
    {{/each}}
  </div>
</div>