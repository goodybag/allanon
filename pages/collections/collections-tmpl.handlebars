<h1 class="page-title">My Collections</h1>

<ul class="collections-list" id="collections-list">
  <li class="collection collection-new">
    <div class="add-new-collection product-main-wrapper">
      <div class="add-new-wrap">
        <i class="icon-green-plus-huge icon"></i>
        <span class="text">Add A New Collection</span>
      </div>
    </div>
    <aside class="product-secondaries">
      <div class="product-secondary-wrapper product-placeholder"></div>
      <div class="product-secondary-wrapper product-placeholder"></div>
      <div class="product-secondary-wrapper product-placeholder"></div>
    </aside>
  </li>

  {{#each collections}}
  <li class="collection">
    <h3 class="collection-title">
      {{truncate this.name 15}} ({{this.numProducts}})
    </h3>

    <div class="product-main-wrapper product-shadow-wrapper">
      <div class="product-shadow product-main-shadow"></div>
      <img src="{{filepicker this.photoUrl 300 300}}" alt="" class="product-main">
    </div>

    <aside class="product-secondaries">
      {{#each this.secondaries}}
      <div class="product-secondary-wrapper product-shadow-wrapper">
        <div class="product-shadow"></div>
        <img src="{{filepicker this.photoUrl 76 76}}" alt="" class="product-secondary">
      </div>
      {{/each}}
    </aside>
  </li>
  {{/each}}
</ul>