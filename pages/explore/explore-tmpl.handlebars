<header class="page-header-box">
  <h1 class="page-title">Explore</h1>

  <div class="row">
    {{! Search }}
    <div class="product-search"></div>

    {{! Filters Button Group }}
    <div class="span6 filters-wrapper">
      <div class="btn-group filters-btn-group">
        <a class="btn btn-large filter-popular{{#in options.sort "popular"}} active{{/in}}"
            href="#/explore/popular">
          Popular
        </a>
        <a class="btn btn-large filter-nearby{{#in options.sort "distance"}} active{{/in}}"
            href="#/explore/nearby">
          Nearby
        </a>
        <a class="btn btn-large filter-random{{#in options.sort "random"}} active{{/in}}"
            href="#/explore/random">
          Mix-It-Up!
        </a>
      </div>
    </div>
  </div>
</header>

<ul class="products-list"></ul>

<h2 class="hide no-results">No products matched your search :(</h2>

<div class="products-list-spinner"></div>
